

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="20dp" />
                    <solid android:color="#aad6d6d6" />
                </shape>
            </item>
            <item android:top="2dp" android:left="2dp" android:bottom="2dp" android:right="2dp">
                <shape>
                    <gradient
                        android:angle="90"
                        android:endColor="@color/btnUnselected"
                        android:startColor="@color/btnUnselected" />
                    <stroke android:width="1dp" android:color="@color/btnUnselected" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>